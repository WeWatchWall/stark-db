                      "description": "The process ID. This is generated by the client."
                  },
                  {
                      "name": "ID",
                      "in": "query",
                      "required": false,
                      "schema": {
                          "type": "string",
                          "enum": [
                              "1",
                              "2",
                              "3"
                          ]
                      },
                      "description": "The user ID.",
                      "allowEmptyValue": false
                  },
                  {
                      "name": "name",
                      "in": "query",
                      "required": false,
                      "schema": {
                          "type": "string",
                          "enum": [
